highlight ColorColumn ctermbg=238
let g:mapleader = "\<Space>"
let g:netrw_liststyle = 3
nnoremap <Down> <Nop>
nnoremap <Left> <Nop>
nnoremap <Right> <Nop>
nnoremap <Up> <Nop>
set colorcolumn=100
set expandtab
set formatoptions-=t
set hidden
set hlsearch
set incsearch
set list listchars=tab:»·,extends:>,precedes:<,trail:·
set noshowmode
set noswapfile
set nowrap
set number
set relativenumber
set scrolloff=10
set shiftwidth=4
set showtabline=2
set signcolumn=yes
set smartcase
set tabstop=4
set textwidth=100
syntax on
